<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title><%= current_page.data.title || "" %></title>
    <%= stylesheet_link_tag "reset" %>
    <link rel="stylesheet" href="https://cdn.rawgit.com/michalsnik/aos/2.0.1/dist/aos.css">
    <%= stylesheet_link_tag "site" %>
    <script src="https://use.typekit.net/ubz5xau.js"></script>
    <script>try{Typekit.load({ async: false });}catch(e){}</script>
  </head>
  <body id="body" class="<%= page_classes %>">
    <header id="header" class="header">
      <div class="main-links">

        <div class="link"><%= link_to 'creators', '/talent.html', :class => 'page-link talent' %></div>
        <div class="link"><%= link_to 'about', '/about.html', :class => 'page-link about' %></div>
        <div data-behavior="toggle-pages" class="logo-container">
          <div class="amoeba">
            <%= image_tag '1-logo-purple.svg', :class => 'logo-layer'%>
            <%= image_tag '2-logo-blue.svg', :class => 'logo-layer'%>
            <%= image_tag '3-logo-green.svg', :class => 'logo-layer'%>
            <%= image_tag '4-logo-yellow.svg', :class => 'logo-layer'%>
            <%= image_tag '5-logo-orange.svg', :class => 'logo-layer'%>
            <%= image_tag '6-logo-red.svg', :class => 'logo-layer'%>
          </div>
          <div class="note">click to expand</div>
        </div>
        <div class="link"><%= link_to 'projects', '/creative.html', :class => 'page-link creative' %></div>
        <div class="link"><%= link_to 'contact', '/contact.html', :class => 'page-link contact' %></div>
      </div>

      <a class="wordmark-wrapper">
        <%= image_tag 'expand-wordmark.svg', :class => 'wordmark'%>
      </a>
    </header>
    <%= yield %>
    <footer>2017 Expand Entertainment, LLC</footer>
  </body>
  <script src="https://code.jquery.com/jquery-3.2.1.min.js"
  integrity="sha256-hwg4gsxgFZhOsEEamdOYGBf13FyQuiTwlAQgxVSNgt4="
  crossorigin="anonymous"></script>
  <%= javascript_include_tag 'cookie' %>
  <script src="http://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.2/modernizr.js"></script>
  <script src="https://cdn.rawgit.com/michalsnik/aos/2.0.1/dist/aos.js"></script>
  <%= javascript_include_tag "site" %>
  <script>$(function($){ Expand.initialize(); });</script>
  <script type="text/javascript">

    var visited = $.cookie("visited")
    if (visited == null) {
      $(".logo").addClass("fade-in");
      setTimeout(function(){
         $(".wordmark").addClass("fade-in");
       }, 1200);
       setTimeout(function(){
         $("#initial-load").addClass("loaded");
         $("#initial-load").fadeOut(400);
         $("header").fadeIn(800);
      }, 5000);
    } else {
      $("#initial-load").addClass("loaded");
      $("#initial-load").hide();
      $("header").fadeIn();
    }
    $.cookie('visited', 'yes', { expires: 1, path: '/' });
    AOS.init();
  </script>
</html>
